<div class="dashboard">
  <section class="create-blog">
    <h2>Create New Blog Post</h2>

    <form class="new-post-form">
      <div>
        <label for="post-title">Title</label>
        <input type="text" id="post-title" name="post-title" />
      </div>

      <div>
        <label for="content-body">Content</label>
        <textarea name="content-body"></textarea>
      </div>

      <div>
        <label for="city-location">City</label>
        <input id="post-city-location" name="post-city-location" />
      </div>
      <div class="form-group row">
        <label for="formFile" class="col-sm-6 col-form-label">Upload Image</label>
        <div class="col-sm-10">
          <input class="form-control userimage" type="file" id="user_image">
        </div>
      </div>
      <button type="submit" class="btn">Create</button>
    </form>
  </section>
  {{#if blogPosts.length}}
  <section class="your-posts">
    <h2>Your Posts</h2>
    <div>
      {{#each blogPosts as |post|}}
      <div class="blog-post">
        {{> post-info post}}
        <a href="/dashboard/edit/{{post.id}}" class="edit-link"><button type="submit">Edit</button></a>
      </div>
      {{/each}}
    </div>
  </section>
  {{/if}}

  <script src="/javascript/add-blog-post.js"></script>
