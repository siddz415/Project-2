<article class="edit-post-section">
    <a class="dashboard-btn" href="/dashboard"> &larr; Back to dashboard</a>
    <h2>
        Edit Post
    </h2>
    <form class="edit-post-form">
        <div>
            <label for="post-title">Title</label>
            <input name="post-title" type="text" value="{{post.title}}" />
        </div>

        <div>
            <label for="content-body">Content</label>
            <input name="content-body" value="{{post.content}}"></input>
        </div>

        <div>
            <label for="city-location">City</label>
            <input name="post-city-location" type="text" value="{{post.city_location}}" />
        </div>

        <div class="edit-meta">
            Written by you on {{format_date post.created_at}}
            |
            {{post.comments.length}} {{format_plural "comment" post.comments.length}}
        </div>
        {{!-- <div class="buttons"> --}}
            <button type="submit" class="save-post-btn">Save post</button>
            <button type="button" class="delete-post-btn">Delete post</button>
            {{!--
        </div> --}}
    </form>
</article>

<div class="line"></div>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>

    <div>
        <button type="submit">Add Comment</button>
    </div>
</form>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-blog-post.js"></script>
<script src="/javascript/comment.js"></script>
